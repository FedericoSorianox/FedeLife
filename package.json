{
  "name": "fede-life-finanzas",
  "version": "1.0.0",
  "description": "Sistema de finanzas personales con IA y MongoDB - PWA",
  "author": "Senior Full Stack Developer",
  "homepage": "https://fedelife-finanzas.onrender.com",
  "pwa": {
    "name": "Fede Life - Finanzas Personales",
    "shortName": "Fede Life",
    "description": "Sistema completo para gestionar tus finanzas personales con IA integrada",
    "themeColor": "#2563eb",
    "backgroundColor": "#f9fafb",
    "display": "standalone",
    "orientation": "portrait-primary",
    "scope": "/",
    "startUrl": "/"
  },
  "main": "server/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server": "nodemon server/index.js",
    "server:dev": "nodemon server/index.js",
    "server:prod": "NODE_ENV=production node server/index.js",
    "dev:unified": "concurrently \"npm run dev\" \"npm run server\"",
    "dev:next-only": "next dev",
    "migrate-to-nextjs": "echo 'Para migrar completamente a Next.js: 1) Mover todas las rutas Express a app/api/ 2) Eliminar server/ 3) Actualizar package.json scripts'",
    "diagnose": "node scripts/diagnose-mongodb.js",
    "diagnose:mongodb": "node scripts/diagnose-mongodb.js",
    "setup:atlas": "node setup-mongodb-atlas.js",
    "switch:dev": "node switch-env.js development",
    "switch:prod": "node switch-env.js production",
    "test:db": "curl http://localhost:3000/api/health",
    "test:auth": "curl http://localhost:3000/api/health",
    "test:login": "curl -X POST http://localhost:3000/api/auth/login -H \"Content-Type: application/json\" -d '{\"identifier\":\"admin@fedelife.com\",\"password\":\"admin123456\"}'",
    "test:connection": "node test-database-connection.js",
    "test:render": "node test-render-connection.js",
    "diagnose:network": "node scripts/diagnose-network.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.19.19",
    "concurrently": "^9.2.1",
    "critters": "^0.0.23",
    "nodemon": "^3.0.2",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/chart.js": "^2.9.41",
    "@types/react": "^19.2.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "next": "^15.5.4",
    "node-fetch": "^3.3.2",
    "pandas": "^0.0.3",
    "pdf-parse-fixed": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "pdfplumber": "^0.0.1-security",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
